<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <% if (searchQuery) { %>
        <h2>Search Results for "<%= searchQuery %>"</h2>
    <% } %>

    <% if (listings && listings.length > 0) { %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4 mt-2">
            <% for(let listing of listings) { %>
                <div class="col">
                    <div class="card listing-card h-100">
                        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="listing image">
                        <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-map-marker-alt"></i> 
                                <%= listing.location %>
                            </p>
                            <p class="card-text">
                                â‚¹<%= listing.price %>/night
                            </p>
                            <a href="/listings/<%= listing._id %>" class="btn btn-dark">View Details</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <div class="text-center my-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h3>No results found</h3>
            <p class="text-muted">Try different keywords or</p>
            <a href="/listings" class="btn btn-dark">View All Listings</a>
        </div>
    <% } %>
</div>